{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "Linux_Task",
            "command": "sh ${workspaceFolder}/build-linux.sh",
            "args": [],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "compiler: /usr/bin/g++"
        },
        {
            
            "type": "shell",
            "label": "Windows_Task",
            "command": "g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "src/main.cpp",
                "src/engine/Engine.h",
                "src/engine/Engine.cpp",
                "-o",
                "bin/windows/main",
                "-IC:/SDL2/x86_64-w64-mingw32/include",
                "-LC:/SDL2/x86_64-w64-mingw32/lib",
                "-lmingw32",
                "-lSDL2main",
                "-lSDL2",
                "-mwindows",
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "compiler: C:/MinGW/bin/g++.exe"
        },
        
    ],
    "variables": {
        "import": "./build-windows.json",
    }
}